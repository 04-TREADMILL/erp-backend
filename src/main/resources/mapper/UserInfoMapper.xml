<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nju.edu.erp.dao.UserInfoDao">
    <insert id="createUserInfo" parameterType="UserInfo" useGeneratedKeys="true" keyProperty="id">
        insert into user_info (`id`, `name`, `gender`, `birthday`, `phone`, `role`, `basic_salary`, `account`)
        values (#{id}, #{name}, #{gender}, #{birthday}, #{phone}, #{role}, #{basic_salary}, #{account})
    </insert>

    <resultMap id="UserInfo" type="com.nju.edu.erp.model.po.UserInfo">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="birthday" property="birthday"/>
        <result column="phone" property="phone"/>
        <result column="role" property="role"/>
        <result column="basic_salary" property="basicSalary"/>
        <result column="account" property="account"/>
    </resultMap>
</mapper>